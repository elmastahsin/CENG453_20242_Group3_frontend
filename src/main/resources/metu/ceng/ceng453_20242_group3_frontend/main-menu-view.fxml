<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainMenuPane" alignment="CENTER" spacing="30.0" styleClass="main-menu-pane" 
      xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="metu.ceng.ceng453_20242_group3_frontend.controller.MainMenuController"
      prefHeight="768.0" prefWidth="1024.0">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <Label text="UNO Game" styleClass="title-label">
        <font>
            <Font name="System Bold" size="48.0" />
        </font>
    </Label>
    
    <Label fx:id="welcomeLabel" text="Welcome, Player!" styleClass="welcome-label">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    
    <VBox alignment="CENTER" spacing="20.0" maxWidth="300.0">
        <Button fx:id="playButton" text="Play Game" prefHeight="50.0" maxWidth="Infinity">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        
        <Button fx:id="leaderboardButton" text="Leaderboard" prefHeight="50.0" maxWidth="Infinity">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        
        <Button fx:id="settingsButton" text="Settings" prefHeight="50.0" maxWidth="Infinity">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        
        <Button fx:id="logoutButton" text="Logout" prefHeight="50.0" maxWidth="Infinity">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </VBox>
    
    <!-- Debug section - Toggle visibility during development -->
    <VBox fx:id="debugSection" alignment="CENTER" spacing="10.0" style="-fx-border-color: gray; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Debug Info" style="-fx-font-weight: bold;" />
        <Label fx:id="tokenDebugLabel" text="Token info will appear here" wrapText="true" />
        <Button fx:id="toggleDebugButton" text="Hide Debug Info" onAction="#toggleDebugInfo" />
    </VBox>
</VBox> 