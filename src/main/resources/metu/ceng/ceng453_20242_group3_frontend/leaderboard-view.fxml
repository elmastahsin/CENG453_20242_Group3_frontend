<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="leaderboardPane" styleClass="main-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="metu.ceng.ceng453_20242_group3_frontend.features.leaderboard.controller.LeaderboardController">
    <children>
        <!-- Background card decorations -->
        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT">
            <image>
                <Image url="@../../../images/top-cards.png" />
            </image>
            <StackPane.margin>
                <Insets left="-50.0" top="-50.0" />
            </StackPane.margin>
        </ImageView>
        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_RIGHT">
            <image>
                <Image url="@../../../images/bottom-cards.png" />
            </image>
            <StackPane.margin>
                <Insets bottom="-50.0" right="-50.0" />
            </StackPane.margin>
        </ImageView>
        
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <ImageView fitHeight="80.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../images/CengUnoLogo.png" />
                    </image>
                </ImageView>
                
                <Label styleClass="title-label" text="Leaderboard">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                
                <TabPane fx:id="leaderboardTabs" styleClass="leaderboard-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Weekly">
                            <content>
                                <TableView fx:id="weeklyTable" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="weeklyRankColumn" prefWidth="75.0" text="Rank" />
                                        <TableColumn fx:id="weeklyUsernameColumn" prefWidth="150.0" text="Username" />
                                        <TableColumn fx:id="weeklyScoreColumn" prefWidth="100.0" text="Score" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                        <Tab text="Monthly">
                            <content>
                                <TableView fx:id="monthlyTable" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="monthlyRankColumn" prefWidth="75.0" text="Rank" />
                                        <TableColumn fx:id="monthlyUsernameColumn" prefWidth="150.0" text="Username" />
                                        <TableColumn fx:id="monthlyScoreColumn" prefWidth="100.0" text="Score" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                        <Tab text="All Time">
                            <content>
                                <TableView fx:id="allTimeTable" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="allTimeRankColumn" prefWidth="75.0" text="Rank" />
                                        <TableColumn fx:id="allTimeUsernameColumn" prefWidth="150.0" text="Username" />
                                        <TableColumn fx:id="allTimeScoreColumn" prefWidth="100.0" text="Score" />
                                    </columns>
                                </TableView>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                
                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="refreshButton" mnemonicParsing="false" styleClass="primary-button" text="Refresh" />
                    <Button fx:id="backButton" mnemonicParsing="false" styleClass="secondary-button" text="Back to Menu" />
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</StackPane> 